import numpy as np
import pandas as pd
from pgmpy.models import BayesianModel
from pgmpy.estimators import BayesianEstimator
# Generating random data for two coin tossing examples
In [4]: raw_data = np.random.randint(low=0, high=2,
size=(1000, 2))
In [5]: data = pd.DataFrame(raw_data, columns=['X', 'Y'])
In [6]: print(data)
Out[6]:
